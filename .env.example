# Environment Configuration Template
# Copy this file to .env.local, .env.production, or .env.development and fill in your values

# Database Configuration (Neon PostgreSQL)
DATABASE_URL="postgresql://username:password@host/dbname?sslmode=require"
DATABASE_URL_UNPOOLED="postgresql://username:password@unpooled-host/dbname?sslmode=require"
NEON_PROJECT_ID="your-neon-project-id"

# Postgres Configuration
PGDATABASE="dbname"
PGHOST="pooler-host"
PGHOST_UNPOOLED="unpooled-host"
PGPASSWORD="password"
PGUSER="username"

# Postgres Environment Variables (Vercel standard)
POSTGRES_DATABASE="dbname"
POSTGRES_HOST="pooler-host"
POSTGRES_PASSWORD="password"
POSTGRES_PRISMA_URL="postgresql://username:password@pooler-host/dbname?connect_timeout=15&sslmode=require"
POSTGRES_URL="postgresql://username:password@pooler-host/dbname?sslmode=require"
POSTGRES_URL_NON_POOLING="postgresql://username:password@unpooled-host/dbname?sslmode=require"
POSTGRES_URL_NO_SSL="postgresql://username:password@pooler-host/dbname"
POSTGRES_USER="username"

# Chatbot Configuration (Optional)
NEXT_PUBLIC_CHATBASE_HOST="https://www.chatbase.co/"
NEXT_PUBLIC_CHATBOT_ID="your-chatbot-id"
NEXT_PUBLIC_refino_CHATBASE_HOST="https://www.chatbase.co/"
NEXT_PUBLIC_refino_CHATBOT_ID="your-refino-chatbot-id"

# Security
SESSION_SECRET="your-secure-random-secret-key"

# Environment Flag
NODE_ENV="development|production"

# Notes:
# - .env.local: Used for local development (committed to .gitignore, not tracked)
# - .env.development: Used when NODE_ENV=development (for dev branch)
# - .env.production: Used when NODE_ENV=production (for main branch)
# - .env.example: Template file (commit this to repository)
#
# Database Strategy:
# - Production (main branch): Uses neondb database
# - Development (dev branch): Uses neondb_dev database (separate or Neon branch)
